{
  "name": "mongoose-express-ts",
  "version": "1.0.0",
  "description": "Mongoose Node.js Express TypeScript application boilerplate with best practices for API development.",
  "author": "Paul Cham",
  "license": "MIT",
  "scripts": {
    "tsc": "tsc",
    "watch-tsc": "tsc -w",
    "deploy": "node dist/src/server.js",
    "watch-deploy": "nodemon dist/src/server.js",
    "server": "concurrently \"npm run watch-tsc\" \"npm run watch-deploy\"",
    "start": "npm run deploy",
    "heroku-postbuild": "npm run tsc"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "config": "^3.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "gravatar": "^1.8.0",
    "handlebars": "^4.7.7",
    "http-status-codes": "^1.3.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.5.7",
    "nodemailer": "^6.7.2",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "request": "^2.88.0",
    "typescript": "^3.4.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "0.0.34",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.16.1",
    "@types/gravatar": "^1.8.0",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongoose": "^5.5.0",
    "@types/nodemailer": "^6.4.4",
    "concurrently": "^4.1.0",
    "nodemon": "^1.19.0"
  }
}
